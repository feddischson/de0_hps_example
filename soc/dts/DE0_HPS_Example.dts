
/include/ "socfpga_cyclone5.dtsi"

/ {
      model = "DE0_HPS_Example";
      compatible = "altr,socfpga-cyclone5", "altr,socfpga";

      chosen {
         bootargs = "console=ttyS0,115200";
      };

      aliases {
         ethernet0 = &gmac1;
         udc0 = &usb1;
      };

      memory {
         name = "memory";
         device_type = "memory";
         reg = <0x0 0x40000000>; /* 1GB */
      };

      soc {
         u-boot,dm-pre-reloc;

      ////////////////////////////////////////////////////////////////////
      //
      // copied and adapted 
      // from 'DE0_HPS_Example.donotuse.dts', created via make example_dts
      //
      hps_0_bridges: bridge@0xc0000000 {
         compatible = "altr,bridge-16.1", "simple-bus";
         reg = <0xc0000000 0x20000000>,
               <0xff200000 0x00200000>;
         reg-names = "axi_h2f", "axi_h2f_lw";
         #address-cells = <2>;
         #size-cells = <1>;
         ranges = <0x00000001 0x00000020 0xff200020 0x00000008>,
                  <0x00000001 0x00000010 0xff200010 0x00000010>,
                  <0x00000001 0x00000000 0xff200000 0x00000010>;

         // See https://github.com/torvalds/linux/blob/master/Documentation/devicetree/bindings/gpio/gpio-altera.txt
         sw_pio: gpio@0x100000000 {
            compatible = "altr,pio-16.1", "altr,pio-1.0";
            reg = <0x00000001 0x00000000 0x00000010>;
            altr,ngpio = <4>;
            resetvalue = <0>;
            #gpio-cells = <2>;
            #interrupt-cells = <1>;
            gpio-controller;
            label = "sw_pio";   
         };

         led_pio: gpio@0x100000010 {
            compatible = "altr,pio-16.1", "altr,pio-1.0";
            reg = <0x00000001 0x00000010 0x00000010>;
            altr,ngpio = <8>;
            resetvalue = <0>;
            #gpio-cells = <2>;
            gpio-controller;
            label = "led_pio";   
         };

			pb_pio: gpio@0x100000030 {
				compatible = "altr,pio-16.1", "altr,pio-1.0";
				reg = <0x00000001 0x00000020 0x00000010>;
            altr,ngpio = <2>;
				resetvalue = <0>;
				#gpio-cells = <2>;
				gpio-controller;
			};

         sysid_qsys_0: sysid@0x100000020 {
            compatible = "altr,sysid-16.1", "altr,sysid-1.0";
            reg = <0x00000001 0x00000030 0x00000008>;
            id = <1193046>;
				timestamp = <1504817015>;
         };

      }; //end bridge


      soc_leds: leds {
         compatible = "gpio-leds";   

        led_hps0: hps0 {
           label = "hps_led0";
           gpios = <&portb 24 0>;
        }; //end hps0 (led_hps0)


         led_fpga0: fpga0 {
            label = "fpga_led0";
            gpios = <&led_pio 0 0>;
         }; //end fpga0 (led_fpga0)

         led_fpga1: fpga1 {
            label = "fpga_led1";
            gpios = <&led_pio 1 0>;
         }; //end fpga1 (led_fpga1)

         led_fpga2: fpga2 {
            label = "fpga_led2";
            gpios = <&led_pio 2 0>;
         }; //end fpga2 (led_fpga2)

         led_fpga3: fpga3 {
            label = "fpga_led3";
            gpios = <&led_pio 3 0>;
         }; //end fpga3 (led_fpga3)

         led_fpga4: fpga4 {
            label = "fpga_led4";
            gpios = <&led_pio 4 0>;
         }; //end fpga4 (led_fpga4)

         led_fpga5: fpga5 {
            label = "fpga_led5";
            gpios = <&led_pio 5 0>;
         }; //end fpga5 (led_fpga5)

         led_fpga6: fpga6 {
            label = "fpga_led6";
            gpios = <&led_pio 6 0>;
         }; //end fpga6 (led_fpga6)

         led_fpga7: fpga7 {
            label = "fpga_led7";
            gpios = <&led_pio 7 0>;
         }; //end fpga7 (led_fpga7)
      }; //end leds (soc_leds)

      //
      ////////////////////////////////////////////////////////////////////

   };

};

&gmac1 {
   status = "okay";
   phy-mode = "rgmii";
   rxd0-skew-ps = <420>;
   rxd1-skew-ps = <420>;
   rxd2-skew-ps = <420>;
   rxd3-skew-ps = <420>;
   txen-skew-ps = <0>;
   txc-skew-ps = <1860>;
   rxdv-skew-ps = <420>;
   rxc-skew-ps = <1680>;
};


&mmc0 {
   status = "okay";
   u-boot,dm-pre-reloc;
};

&usb1 {
   status = "okay";
};

&spi1 {
    status = "okay";
};


&uart0 {
    status = "okay";
};

&i2c0 {
    status = "okay";
};

&i2c1 {
    status = "okay";
};

&gpio0 {
   status = "okay";
};

&gpio1 {
   status = "okay";
};

&gpio2 {
   status = "okay";
};

&watchdog0 {
   status = "okay";
};


